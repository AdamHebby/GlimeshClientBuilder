{
    "name": "adamhebby/glimesh-client-builder",
    "description": "Builds Object models based on glimesh.tv GraphQL API Schema",
    "type": "project",
    "authors": [
        {
            "role": "Owner & Author",
            "name": "Adam Hebden",
            "email": "adam@adamhebden.com",
            "homepage": "https://github.com/AdamHebby/GlimeshClientBuilder"
        }
    ],
    "bin": [
        "bin/glimbuild"
    ],
    "autoload": {
        "psr-4": {
            "GlimeshClientBuilder\\": "src/GlimeshClientBuilder/",
            "GlimeshClientBuilder\\Tests\\": "tests/GlimeshClientBuilder/"
        }
    },
    "scripts": {
        "phpunit": [
            "XDEBUG_MODE=coverage php vendor/bin/phpunit"
        ],
        "phpcs": [
            "php vendor/bin/phpcs --standard=zend src/ tests/GlimeshClientBuilder/"
        ],
        "phpstan": [
            "php vendor/bin/phpstan analyse"
        ]
    },
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.12.23",
        "squizlabs/php_codesniffer": "^3.6"
    }
}
